{
    "name": "fr3nch13/cakephp-pta",
    "description": "A CakePHP Plugin to emulate a generic App when testing Plugins.",
    "keywords": ["cakephp", "plugin", "app"],
    "homepage": "https://github.com/fr3nch13/cakephp-pta",
    "type": "cakephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Brian French",
            "email": "fr3nch13@gmail.com",
            "homepage": "https://github.com/fr3nch13"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.2",
        "cakephp/bake": "^1.9.0",
        "cakephp/cakephp": "^3.8.7",
        "cakephp/cakephp-codesniffer": "^3.2.1",
        "cakephp/debug_kit": "3.*",
        "cakephp/migrations": "^2.0.0",
        "cakephp/plugin-installer": "^1.0",
        "dereuromark/cakephp-ide-helper": "^0.14.2",
        "josegonzalez/dotenv": "3.*",
        "mobiledetect/mobiledetectlib": "2.*",
        "mockery/mockery": "^1.2",
        "phpstan/phpstan": "^0.12.3",
        "phpunit/phpunit": "^5.7|^6.0",
        "psy/psysh": "@stable"
    },
    "autoload": {
        "psr-4": {
            "Fr3nch13\\Pta\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests/test_app/src",
            "App\\Test\\": "tests/test_app/tests",
            "Fr3nch13\\Pta\\Test\\": "tests/",
            "Fr3nch13\\Pta\\Test\\Fixture\\": "tests/Fixture/",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    },
    "scripts": {
        "post-autoload-dump": "Cake\\Composer\\Installer\\PluginInstaller::postAutoloadDump",
        "ci": [
            "@check",
            "@coverage-text"
        ],
        "check": [
            "@cs-check",
            "@phpstan",
            "@test"
        ],
        "fix": [
            "@cs-fix",
            "@cs-check"
        ],
        "cs-check": "vendor/bin/phpcs --colors -p -s --extensions=ctp,php ./src ./tests",
        "cs-fix": "vendor/bin/phpcbf --colors --extensions=ctp,php ./src ./tests",
        "phpstan": "phpstan analyse src/ tests/ -c phpstan.neon --level=4 --no-progress -vvv",
        "test": "vendor/bin/phpunit --colors=always",
        "coverage": "vendor/bin/phpunit --log-junit tmp/coverage/unitreport.xml --coverage-html tmp/coverage",
        "coverage-clover": "vendor/bin/phpunit --coverage-clover=tmp/coverage.xml",
        "coverage-text": "vendor/bin/phpunit --coverage-text --colors=never"
    },
    "config": {
        "sort-packages": true
    }
}
